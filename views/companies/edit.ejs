<% include ../partials/header %>

<div class="row">
	<h1 style="text-align: center">Edit <%= company.name %></h1>
	<div style="width: 30%; margin: 25px auto;">
		<form action="/companies/<%= company._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input
					class="form-control"
					type="text"
					name="company[name]"
					value="<%= company.name %>"
					required
				/>
			</div>
			<div class="form-group">
				<input
					class="form-control"
					type="number"
					name="company[cost]"
					value="<%= company.cost %>"
					step="1"
					min="0"
					required
				/>
			</div>
			<div class="form-group">
				<input
					class="form-control"
					type="text"
					name="company[location]"
					id="location"
					value="<%= company.location %>"
					required
				/>
			</div>
			<div class="form-group">
				<input
					class="form-control"
					type="text"
					name="company[image]"
					value="<%= company.image %>"
					required
				/>
			</div>
			<div class="form-group">
				<input
					class="form-control"
					type="text"
					name="company[description]"
					value="<%= company.description %>"
					required
				/>
			</div>
			<div class="form-group">
				<button class="btn btn-lg btn-primary btn-block">Submit!</button>
			</div>
		</form>
		<a href="/companies">Go Back</a>
	</div>
</div>

<% include ../partials/footer %>
