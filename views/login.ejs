<% include ./partials/header %>
<div
	class="container"
	style=" background-image: url('https://images.unsplash.com/photo-1473197411253-0151b2882b52?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60');background-repeat: no-repeat;background-position: center; background-size: cover;"
>
	<div class="row">
		<h1 style="text-align: center">Login</h1>
		<div style="width: 30%; margin: 25px auto; ">
			<form action="/login" method="post">
				<div class="form-group">
					<input
						class="form-control"
						type="text"
						name="username"
						placeholder="username"
						required
					/>
				</div>
				<div class="form-group">
					<input
						class="form-control"
						type="password"
						name="password"
						placeholder="password"
						required
					/>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Login</button>
				</div>
			</form>
			<a href="/companies">Go Back</a>
		</div>
	</div>
</div>

<% include ./partials/footer %>
